{
  "name": "fba-direct-measure",
  "version": "0.1.0",
  "description": "FBA direct & indirect measurement backend scaffold + UI",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --esm src/index.ts",
    "build": "tsc && npm run copy-schemas",
    "copy-schemas": "copyfiles -u 1 src/schemas/**/*.json dist/schemas",
    "start": "node dist/index.js",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:start": "vite preview",
    "migrate": "psql -f scripts/init-db.sql"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "bullmq": "^5.63.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "lodash": "^4.17.21",
    "mustache": "^4.2.0",
    "pg": "^8.16.3",
    "puppeteer": "^24.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-json-editor-ajrm": "^2.5.14",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.5",
    "@types/ioredis": "^4.28.10",
    "@types/lodash": "^4.17.20",
    "@types/mustache": "^4.2.6",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vite": "^7.2.2"
  }
}
