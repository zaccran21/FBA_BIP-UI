{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    // ðŸ‘‡ Add these for React
    "jsx": "react-jsx",
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
